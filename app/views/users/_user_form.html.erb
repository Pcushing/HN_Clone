<%= form_for @user do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation, "Confirm That Password, por favor" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.submit "Create my HNClone account, now!", class: "btn btn-primary" %>
  </div>
<% end %>
