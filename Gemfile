source 'https://rubygems.org'

gem 'rails', '3.2.6'
gem 'twitter-bootstrap-rails'
gem 'kaminari'
gem 'bcrypt-ruby'
gem 'jquery-rails'
gem 'thin'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'sqlite3'
  gem 'quiet_assets'
  gem 'jazz_hands'
  gem 'nokogiri'
end

group :test do
  gem 'sqlite3'
end

group :production do
  gem 'pg'
end
