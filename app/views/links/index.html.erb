<div class="hero-unit">
  <h2>Here's your damn links, nerd</h2>

  <ol>
    <% @links.each do |link| %>
      <li>
        <% if signed_in? && current_user.id == link.user_id %> <%= link_to "Edit link", edit_link_path(link.id) %> <% end %> <%= link.url %>
      </li>
    <% end %>
  </ol>
  <!-- <div class="pagination"> -->
    <%= paginate @links %>
  <!-- </div> -->
</div>